@model List<Contact>

<h2 class="text-center  mb-5">Contacts</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Contact" asp-action="Create">New Contact</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>PhoneNumber</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact contact in Model)
        {
            <tr>
                <td>@contact.Id</td>
                <td>@contact.Name</td>
                <td>@contact.Surname</td>
                <td>@contact.PhoneNumber</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary" asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id" onclick="return confirm('Are you sure')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>